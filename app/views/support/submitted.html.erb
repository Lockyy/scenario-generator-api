<%= provide :header, 'dark' %>

<div class="contact-form">
  <div class="row">
    <div class="col-xs-12">
      <div class="title"><%= @title %></div>
      <span class="text">Your message has been sent to</span>
      <span class="email"><%= link_to 'fletcher@am.jll.com', 'mailto:fletcher@am.jll.com' %></span>
      <div>You will be redirected in a <span id='sec'>3</span> seconds.</div>
    </div>
  </div>
</div>

